<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_row_item_horizontal"
        android:id="@+id/main_card_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_post_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_row_item_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/sketch"
                android:contentDescription="@string/post_image"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_0"
                android:backgroundTintMode="src_in">
                <TextView
                    android:id="@+id/main_post_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/grey_900"
                    tools:text="Android RecyclerView Tutorial"
                    android:padding="5dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_900"
                    android:text="Posted by:"
                    android:padding="5dp"
                    app:layout_constraintStart_toStartOf="@+id/main_post_title"
                    app:layout_constraintTop_toBottomOf="@+id/main_post_title"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/main_post_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:padding="5dp"
                    android:textColor="@color/grey_900"
                    app:layout_constraintEnd_toStartOf="@+id/textView7"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/main_post_title"
                    tools:text="Shudipto Trafder" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:padding="5dp"
                    android:textColor="@color/grey_900"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/main_post_date"
                    app:layout_constraintTop_toBottomOf="@+id/main_post_title"
                    android:text="On:"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/main_post_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/grey_900"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/main_post_title"
                    app:layout_constraintTop_toBottomOf="@+id/main_post_title"
                    tools:text="07 may 2017" />
            </android.support.constraint.ConstraintLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>